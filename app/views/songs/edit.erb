<form action="/songs/<%= @song.slug %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
  
  <label>Update a song</label>
  <br><br>
  Name:<input type="text" name="Name" id="song_name">
  Artist Name: <input type="text" name="Artist Name" id="artist_name">
  
  <% Genre.all.each do |genre| %>
    <input id= "<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
    <% end %>
  
  
  <input type="submit" value="Save">
  
</form>